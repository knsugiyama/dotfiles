[core]
  quotepath = false
  excludesfile = ~/.gitignore
  preloadindex = true

[color]
  ui = auto

[alias]
  st = status
  co = checkout
  ci = commit
  typechange = status -s | awk '$1=="T"{print $2}' | xargs git checkout
  graph = log --graph --date-order --all --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short
  br = switch
  review = diff origin/master...
  commit-log = log origin/master..
  delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %

[help]
  autocorrect = 1

[user]
  name = knsugiyama
  email = knsugiyama15@gmail.com

[pager]
  log  = diff-highlight | less -RX
  show = diff-highlight | less -RX
  diff = diff-highlight | less -RX

[push]
  default = simple

[credential]
  helper = manager
  canFallBackToInsecureStore = true

[ghq "CODECOMMIT-URL"]
  vcs = git

[fetch]
  prune = true

[ghq]
  root = ~/src
